<div class="container margenes">
    <div class="row">
        <div class="col">
            <h2>Agregar una nueva novedad</h2>
            <br>
            <br>
            <form action="/admin/novedades/agregar" method="post">
                <div class="mb-3">
                    <label class="form-label">Título</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" name="titulo">
                </div>
                <div class="mb-3">
                    <label class="form-label">Subtítulo</label>
                   <textarea class="form-control" name="subtitulo" rows="3"></textarea>
                </div>
                 <div class="mb-3">
                    <label class="form-label">Cuerpo</label>
                   <textarea class="form-control" name="cuerpo" rows="10"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-lg">Guardar</button>
            </form>
            
        </div>
    </div>
</div>