 <h2>Novedades</h2>
 <div style="Float:right; position: relative; bottom:35px;">
   <form action="/novedades" method="get">
     <input type="search" name="q" {{#if q}}value="{{q}}"{{/if}}>
     <button type="submit">Buscar</button>
   </form>
 </div>
      {{#each novedades}}
        <div style="margin-top: 45px;">
            <h3>{{titulo}}</h3>
            <h4>{{subtitulo}}</h4>
            <p>{{cuerpo}}</p>
            <hr><!-- esto genera una línea, representa un cambio de tema entre párrafos -->
        </div>
      {{/each }}
      {{#if is_search}}
        {{#unless novedades.length}}
        <p>No se encontraron resultados para <b>"{{q}}"</b></p>
        {{/unless}}
        {{/if}}